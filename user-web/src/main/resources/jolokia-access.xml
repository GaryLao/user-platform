<?xml version="1.0" encoding="utf-8"?>
<restrict>
    <commands>
        <command>read</command>
        <command>list</command>
        <command>version</command>
        <command>search</command>
    </commands>

    <allow>
        <mbean>
            <name>pojo-agent-user:name=User</name>
            <operation>*</operation>
            <attribute>name</attribute>
            <attribute mode="write">password</attribute>
        </mbean>
    </allow>
</restrict>